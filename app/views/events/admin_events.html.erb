<div class="container">
  <div class="row">
    <div class="span12">
      <h3>活动列表</h3>
      <table class="table table-hover admin-events">
        <tr>
          <th>活动日期</th>
          <th>活动描述</th>
          <th>活动名称</th>
          <th></th>
        </tr>
        <% @events.each do |event| %>
            <tr>
              <td><%= event.event_date %></td>
              <td><%= event.title %></td>
              <td><%= event.description %></td>
              <td> <%= link_to 'Delete',event_path(event) , method: :delete,data:{ confirm:'删除活动之后将无法恢复，你确认要删除吗？'}, :class => 'btn btn-small'%></td>

            </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
